<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/halal_light_green</item>
        <!-- toolbar（actionbar）字体颜色 -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/halal_high_green</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/halal_light_gray</item>
        <!-- SearchView -->
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="AppTheme" parent="@style/AppBaseTheme"></style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView"></style>

    <style name="MyToolBarPopupTheme" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="MyToolBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

</resources>